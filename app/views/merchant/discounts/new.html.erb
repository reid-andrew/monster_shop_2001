<h1>Create New Discount For <%=link_to @current_user.merchant.name, "/merchants/#{@current_user.merchant.id}" %></h1>

<center>
  <%= form_tag "/merchant/discounts", method: :post do %>
    <%= label_tag :discount %>
    <%= text_field_tag :discount%>

    <%= label_tag :items %>
    <%= text_field_tag :items %>

    <%= submit_tag 'Save' %>
  <% end %>
</center>
