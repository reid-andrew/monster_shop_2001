<section>
<h1><%= "#{@merchant.name}" %> Bulk Discounts</h1>

<center>
  <%= link_to "Create New Bulk Discount", "/merchant/discounts/new" %>
</center>

<section>
  <% @merchant.discounts.each do |discount| %>
    <section id = <%= "discount_#{discount.id}"%>>
      <%= "#{discount.discount}% on #{discount.items} items." %>
      <%= button_to "View Discount", "/merchant/discounts/#{discount.id}", method: :get %>
      <% if discount.active %>
        <%= button_to "Deactivate Discount", "/merchant/discounts/#{discount.id}", method: :patch, params: {active: :false} %>
      <% else %>
        <%= button_to "Activate Discount", "/merchant/discounts/#{discount.id}", method: :patch, params: {active: :true} %>
      <% end %>
    </section>
  <% end %>
</section>
